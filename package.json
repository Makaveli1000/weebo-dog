{
  "name": "projectsports",
  "version": "1.0.0",
  "description": "SNTLMO Exclusive Sports Grid web application",
  "main": "env-config.js",
  "scripts": {
    "build": "bash -c 'rm -rf dist; mkdir -p dist; sh ./build-env.sh; node esbuild.config.js; npm run tailwind:build; cp index.html dist/index.html'",
    "start:dev": "npm run build && firebase emulators:start --only hosting",
    "tailwind:build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "tailwind:watch": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Makaveli1000/weebo-dog.git"
  },
